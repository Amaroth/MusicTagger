        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Title" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,15,0,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="QuestionTextBlock" TextWrapping="Wrap" Width="300" Margin="15,0,15,0">Question:</TextBlock>
        <WrapPanel Grid.Row="1" Name="ButtonsWrapPanel" MaxWidth="300" HorizontalAlignment="Right" Margin="13,0,13,0"/>
    </Grid>
</Window>